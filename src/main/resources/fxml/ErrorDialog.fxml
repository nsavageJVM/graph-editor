<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="150.0" prefWidth="500.0" styleClass="dialog" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <AnchorPane prefHeight="60.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="ok" styleClass="button_dialog" defaultButton="true" layoutX="359.0" layoutY="15.0" mnemonicParsing="false"
                        onAction="#closeDialog" prefWidth="90.0" text="Ok"/>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </AnchorPane>
    </bottom>
    <left>
        <ImageView fx:id="img" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="20.0"/>
            </BorderPane.margin>
        </ImageView>
    </left>
    <center>
        <Label fx:id="message" styleClass="label_dialog" BorderPane.alignment="CENTER">
            <font>
                <Font name="Tahoma" size="20.0"/>
            </font>
        </Label>
    </center>
</BorderPane>
